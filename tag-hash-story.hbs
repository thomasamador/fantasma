{{!--
=============================================================================
STORY TAG ARCHIVE TEMPLATE
=============================================================================

Card layout for posts tagged with #story.
Automatically used when visiting /tag/hash-story/

LAYOUT:
- Header with tag name and post count
- Cards with cover image, title, author, and tagline

NOTE: Users typically access stories via /stories/ page (page-stories.hbs)
rather than this tag archive directly.

CSS: See assets/css/custom.css ยง12 (Stories Listing)
--}}
{{!< default}}

<header class="archive-header stories-header">
    <h1>Stories</h1>
    {{#if tag.description}}
        <p>{{tag.description}}</p>
    {{/if}}
    <small>{{plural tag.count.posts empty="No stories" singular="% story" plural="% stories"}}</small>
</header>

<section class="stories-list">
    {{#foreach posts}}
        <article class="story-card">
            {{#if feature_image}}
                <a href="{{url}}" class="story-card-image">
                    <img 
                        src="{{img_url feature_image size="m"}}" 
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        loading="lazy"
                    >
                </a>
            {{/if}}
            
            <div class="story-card-content">
                <header>
                    <h2>
                        <a href="{{url}}">{{title}}</a>
                    </h2>
                    {{#primary_author}}
                        <p class="story-card-author">by {{name}}</p>
                    {{/primary_author}}
                </header>
                
                {{#if custom_excerpt}}
                    <p class="story-card-tagline">{{custom_excerpt}}</p>
                {{/if}}
                
                <footer class="story-card-meta">
                    {{#if reading_time}}
                        <span>{{reading_time}} min read</span>
                    {{/if}}
                </footer>
            </div>
        </article>
    {{/foreach}}
</section>

{{> pagination}}
